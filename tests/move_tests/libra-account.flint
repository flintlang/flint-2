contract Account {
  visible var value: Libra
}

Account :: sender <- (any) {
  public init() {
    value = Libra()
  }

  public func getBalance() -> Int {
    return value.balance()
  }

  func transfer(to: inout Libra, n: Int) mutates (value) {
    value.transfer(to: &to, amount: n)
  }
}