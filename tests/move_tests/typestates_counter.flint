contract Counter (Unset, Counting) {
  visible var count: Int = 0
}

Counter :: (any) {
  public init() {
    become Unset
  }

  public func increment(by: Int) mutates (count) {
    count += by
    become Counting
  }

  public func getCountManual() -> Int {
    return self.count
  }
}

Counter @(Counting) :: (any) {
  public func reset() mutates (count) {
    count = 0
    become Unset
  }
}
