contract Factorial {
  var value: Int = 0
}

Factorial :: (any) {
  public init() {}

  func factorial(n: Int) -> Int {
    if (n < 2) { return 1 }
    return n * factorial(n: n - 1)
  }

  public func calculate(n: Int) mutates (value) {
    value = factorial(n: n)
  }

  public func getValue() -> Int {
    return value
  }
}